<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:id="@+id/itemLayout"
    android:background="#ffffff">

    <TextView
        android:layout_toLeftOf="@+id/time"
        android:id="@+id/name"
        android:layout_marginRight="15dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.3dp"
        android:layout_marginTop="16.2dp"
        android:text="장소"
        android:textColor="#3c404a"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginBottom="16.3dp"
        android:layout_marginTop="15dp"
        android:textColor="#6a707e"
        android:text="안녕 반가워~"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/done"
        android:layout_marginRight="15dp"
        android:textSize="13.3dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/name"
        android:layout_marginRight="16.3dp"
        android:text="time"
        android:textColor="#868b97" />


    <ImageView
        android:id="@+id/done"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/time"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16.3dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/in_progress" />
</RelativeLayout>